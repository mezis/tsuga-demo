#tsuga
  %nav.navbar.navbar-default.navbar-fixed-top{ role:'navigation' }
    = link_to '#/', class:'navbar-brand' do
      %span.text-primary
        Tsuga
      %span.text-muted
        a clusterer for maps
    %p.navbar-text.pull-right
      %a{ href: 'http://github.com/mezis/tsuga' }
        View on Github

  %nav.navbar.navbar-default.navbar-fixed-bottom{ role:'navigation' }
    .collapse.navbar-collapse
      %p.navbar-text
        Zoom:
        %span#js-zoomlevel
      %p.navbar-text
        %span#js-cluster-count ?
        clusters
      %p.navbar-text
        %span#js-point-count ?
        points

      .navbar-form.navbar-left.btn-group#map-flags
        %label.btn
          %input.js-lines{ type: 'checkbox' }
          Lines
        %label.btn
          %input.js-labels{ type: 'checkbox' }
          Labels
        %label.btn
          %input.js-points{ type: 'checkbox' }
          Points


  #map-container
    #map-canvas{ data: { 'clusters-path' => clusters_path, 'tiles-path' => tiles_path, 'points-path' => points_path } }
